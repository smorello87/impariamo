# Force cache clear for Reclaim Hosting
<IfModule mod_headers.c>
  # Nuclear option - force everything to reload
  Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires "0"
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # ── EXEMPT the entire flower folder ──
  # if the request is for /impariamo/flower/anything ending in .jpg/.png/.gif …
  RewriteRule ^impariamo/flower/.*\.(jpe?g|png|gif)$ - [L,NC]

  # ── (Optional) Exempt all real files and dirs everywhere ──
  #RewriteCond %{REQUEST_FILENAME} -f [OR]
  #RewriteCond %{REQUEST_FILENAME} -d
  #RewriteRule ^ - [L]
</IfModule>
